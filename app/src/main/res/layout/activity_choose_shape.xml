<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseShape">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        android:id="@+id/imageview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/applogo"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        android:text="Choose your desired shape"
        android:textStyle="bold"
        android:textColor="@color/logoBrown"
        android:layout_marginTop="40dp"/>
    <ImageButton
        android:id="@+id/ikitchen"
        android:elevation="20dp"
        android:background="@drawable/shape_corner100dp_strokeshadow2dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ikitchen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/textview"/>
    <ImageButton
        android:id="@+id/ukitchen"
        android:elevation="20dp"
        android:background="@drawable/shape_corner100dp_strokeshadow2dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ukitchen"
        app:layout_constraintLeft_toRightOf="@id/ikitchen"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/textview"/>
    <ImageButton
        android:id="@+id/lkitchen"
        android:elevation="20dp"
        android:background="@drawable/shape_corner100dp_strokeshadow2dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/lkitchen"
        app:layout_constraintTop_toBottomOf="@id/ikitchen"/>
    <ImageButton
        android:id="@+id/islandkitchen"
        android:elevation="20dp"
        android:background="@drawable/shape_corner100dp_strokeshadow2dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/islandkitchen"
        app:layout_constraintLeft_toRightOf="@id/lkitchen"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/ikitchen"/>


        
</androidx.constraintlayout.widget.ConstraintLayout>