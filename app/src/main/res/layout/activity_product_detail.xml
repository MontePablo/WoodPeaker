<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadowlight"
    tools:context=".ProductDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/addtocart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/sliderView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="golden blaze wooden finish kitchen"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sliderView" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Color:"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/colRed"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_margin="15dp"
                android:background="@color/dotRedDeep"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/textview"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/colGreen"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="#5AC833"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colRed"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/colBlue"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="#004EEA"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colGreen"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/colWhite"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colBlue"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/colBlack"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="#000000"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colWhite"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/colYellow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="#FFEB3B"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colBlack"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:id="@+id/tryon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shape_corner15dp_strokeshadow1dp"
                android:elevation="20dp"
                android:text="3D TRY ON"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colBlack" />

            <TextView
                android:id="@+id/features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tryon" />

            <TextView
                android:id="@+id/otherDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/features" />
            <LinearLayout
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/otherDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/reviews_layout">
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:backgroundTint="@color/shadow"
        android:elevation="15dp"
        android:background="@drawable/shape_corner20dp_stroke_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        app:layout_constraintWidth_percent="0.47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:id="@+id/addtocart"/>
    <Button
        android:textColor="@color/white"
        android:backgroundTint="@color/dotRedLight"
        android:background="@drawable/shape_corner20dp_stroke_white"
        android:elevation="15dp"
        android:textAllCaps="false"
        android:text="Buy Now"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        app:layout_constraintWidth_percent="0.47"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/buynow"/>


</androidx.constraintlayout.widget.ConstraintLayout>