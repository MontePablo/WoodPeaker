<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buynow"
        app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/sliderView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true" />

            <TextView
                android:lineSpacingExtra="5dp"
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="golden blaze wooden finish kitchen"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sliderView" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Color:"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:visibility="gone"
                android:id="@+id/colRed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="@color/dotRedDeep"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/textview"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:visibility="gone"
                android:id="@+id/colGreen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#5AC833"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colRed"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:visibility="gone"
                android:id="@+id/colBlue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#004EEA"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colGreen"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:visibility="gone"
                android:id="@+id/colWhite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colBlue"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:visibility="gone"
                android:id="@+id/colBlack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#000000"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colWhite"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:visibility="gone"
                android:id="@+id/colYellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#FFEB3B"
                android:elevation="5dp"
                app:layout_constraintLeft_toRightOf="@id/colBlack"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <Button
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="15dp"
                android:id="@+id/tryon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/shape_corner15dp_strokeshadow1dp"
                android:elevation="20dp"
                android:text="3D TRY ON"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview" />

            <TextView
                android:lineSpacingExtra="7dp"
                android:textSize="17sp"
                android:id="@+id/features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Features"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tryon" />

            <TextView
                android:lineSpacingExtra="10dp"
                android:textSize="15sp"
                android:id="@+id/otherDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="this kitchen is actualy made of italian marbel and kosthi Stone."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/features" />
        <TextView
            android:layout_margin="20dp"
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otherDetail"/>
        <LinearLayout
            android:id="@+id/reviews_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview3" />
            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Addons you can add"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviews_layout" />

        <HorizontalScrollView
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="300dp">
            <LinearLayout
                android:id="@+id/addon_layout"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:text="2000"
        android:textColor="#2A2A2A"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textview4" />
    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/logoBrown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:text="₹"/>
    <Button
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@color/white"
        android:backgroundTint="@color/dotRedLight"
        android:background="@drawable/shape_corner20dp_stroke_white"
        android:elevation="15dp"
        android:textAllCaps="false"
        android:text="Buy Now"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        app:layout_constraintWidth_percent="0.67"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/buynow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="/foot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:layout_marginLeft="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>